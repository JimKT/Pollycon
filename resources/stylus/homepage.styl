$mobile-menu-size = 30px

.hero__h1
  font-size 10vw

.burger-menu
  width: $mobile-menu-size
  display: block
  transition: all .3s
  cursor: pointer
  height: $mobile-menu-size
  z-index 2
  background transparent

  .bar
    float: right

  .bar:nth-of-type(2)
    width: 75%     
    transition-property: margin, height, width
    transition-delay: .3s, .3s, 0s

  .bar:nth-of-type(3)
    width: 50%          

  &:hover
    .bar:nth-of-type(2)
      width: 100%

    .bar:nth-of-type(3)
      width: 100%

  .bar
    transition: all .3s
    height: 2px
    width: 100%
    display: block
    background-color: black
    
  .bar:nth-of-type(2)
    margin: 8px 0

  &:hover
    .bar:nth-of-type(2)
      width: 100%

    .bar:nth-of-type(3)
      width: 100%
        
  &.active
    transform: rotate(90deg);
    transition: 0.3s ease-in-out;
    left: -5px;
    position: relative;
    top: -2px;
      